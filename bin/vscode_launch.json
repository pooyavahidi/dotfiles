{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current Test Module",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run All Tests",
            "type": "python",
            "request": "launch",
            "module":"unittest",
            "args": [
                "discover",
                "tests"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Tests (focused test)",
            "type": "python",
            "request": "launch",
            "module":"unittest",
            "args": [
                "tests.package.module.test_method"
            ],
            "console": "integratedTerminal"
        }
    ]
}