#!/bin/sh

###################################
# Add the directories to the PATH
###################################
export PATH="$HOME/.bin:$PATH";
export PATH="$HOME/.local/bin:$PATH";

# Add Visual Studio Code (code) to the PATH - macOS
export PATH="/Applications/Visual Studio Code.app/Contents/Resources/app/bin:$PATH";


###################################
# export environment variables
###################################
export WORKSPACE=$HOME/workspace
export VISUAL=vim 
export EDITOR="$VISUAL" 

# Set defaults for aws specific functions
export S3_WS_BUCKET="workspace default bucket name"

# Enable docker BuildKit 
export DOCKER_BUILDKIT=1


###################################
# Load the lib scripts
###################################
# Load the shell dotfiles
for file in $HOME/.{shell_prompt,aliases,functions}; do
     source "$file"
done;

# Load scripts from the .lib directory
for file in $HOME/.lib/*.sh; do
     source "$file"
done;

# ~/.extra can be used for additional scripts that you donâ€™t want to commit.
file="$HOME/.extra"
[ -r "$file" ] && [ -f "$file" ] && source "$file";
unset file;


# Completions
##############################
# Set the completion for awscli
if __aws_comp=$(which aws_completer); then
	complete -C ${__aws_comp} aws
fi;
unset __aws_comp;
