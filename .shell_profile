#!/bin/sh

# Add `~/bin` to the `$PATH`
export PATH="$HOME/.bin:$PATH";

# Load the shell dotfiles
# ~/.extra can be used for additional settings that you donâ€™t want to commit.
for file in ~/.{path,shell_prompt,exports,aliases,functions,extra}; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;

# Load scripts from the .lib directory
for file in $HOME/.lib/*.sh; do
     source $file
done;
unset file;

# Completions
##############################
# Set the completion for awscli
if __aws_comp=$(which aws_completer); then
	complete -C ${__aws_comp} aws
fi;
unset __aws_comp;
